 journal = {Mol Genet Metab},
 keywords = {Amino Acid Substitution, Base Sequence, Child, Preschool, Chromosomes, Human, X, DNA Mutational Analysis, Female, Humans, Male, Mosaicism, Mutation, Missense, Phenotype, Pyruvate Dehydrogenase (Lipoamide), Pyruvate Dehydrogenase Complex Deficiency Disease},
 language = {eng},
 month = {July},
 number = {3},
